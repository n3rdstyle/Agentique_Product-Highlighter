{
  "manifest_version": 3,
  "name": "Product Highlighter",
  "version": "1.0",
  "description": "Highlights products on search result pages based on user prompts",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["groq-enhancer.js", "content.js", "evaluator.js"],
      "css": ["highlight.css", "feedback.css", "toolbar.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}